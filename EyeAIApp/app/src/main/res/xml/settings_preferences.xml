<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="General">
        <CheckBoxPreference
            app:key="@string/profiling_enabled_setting"
            app:title="Enable Profiling"
            app:summary="Has a big effect on performance!" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Depth Estimation">
        <ListPreference
            app:key="@string/depth_model_setting"
            app:title="Depth Estimation Model"
            app:summary="%s" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Spatial Audio">
        <CheckBoxPreference
            app:key="@string/spatial_audio_enabled_setting"
            app:title="Enable Spatial Audio"
            app:summary="For now, only experimental oscillator sounds"
            app:defaultValue="true"/>
    </PreferenceCategory>
</PreferenceScreen>